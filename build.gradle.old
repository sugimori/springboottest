plugins {
    id 'org.springframework.boot' version '1.4.2.RELEASE'
    id 'java'
}

task hello << {
        println 'Hello world!'
}

repositories {
    jcenter()
}

dependencies {
    compile 'org.slf4j:slf4j-api:1.7.21'
    testCompile 'junit:junit:4.12'

    compile("org.springframework.boot:spring-boot-starter-web:1.4.3.RELEASE")
}
